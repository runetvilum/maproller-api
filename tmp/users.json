{
  "docs": [
    {
      "_id": "_design/users",
      "language": "javascript",
      "views": {
        "role": {
          "map": "function (doc) {\n    doc.roles.forEach(function(role) {\n    emit(role.replace(\"admin_\",\"\").replace(\"user_\",\"\"), doc);\n  });\n}"
        },
        "verification_code": {
          "map": "function (doc) {\n    if (doc.type === 'user' && doc.verification_code)\n        emit(doc.verification_code, doc);\n}"
        }
      }
    }
  ]
}